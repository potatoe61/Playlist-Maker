<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Settings_FrameLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Settings_TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:gravity">left|center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Settings_ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:tint">@color/images</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:elevation">0dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
    </style>

    <style name="Main_LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/bg</item>
    </style>

    <style name="Main_TextViewStyle">
        <item name="android:padding">@dimen/margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Main_ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:backgroundTint">#FFFFFFFF</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">#FF000000</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlayerInfo">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="Settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="thumbTint">?attr/colorSecondaryVariant</item>
        <item name="trackTint">#E6E8EB</item>
    </style>



    <style name="PlayerInfoTitle">
        <item name="android:textColor">@color/hint</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomNavigationMenu">
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="itemTextAppearanceActive">@style/BottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="backgroundTint">@color/white</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>

    <style name="BottomNavText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="PlaylistsInfoTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewPlaylistTextInputLayout">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/dark_blue</item>
        <item name="boxStrokeColor">@color/box_stroke_color</item>
    </style>

    <style name="NewPlaylistTextInputEditText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PlaylistCountTextStyle">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PlaylistTitleTextStyle" parent="PlaylistCountTextStyle">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BasePlaceholderText">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ModalHeaderText" parent="BasePlaceholderText">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlaylistAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="ImageRounded8dpStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Header">
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="PlaceholderActionButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TrackInfoTitleStyleInPlayer">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/aluminium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HeaderArrowBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:src">@drawable/vector</item>
        <item name="tint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TrackInfoValueStyle" parent="TrackInfoTitleStyleInPlayer">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:gravity">end</item>
    </style>
</resources>
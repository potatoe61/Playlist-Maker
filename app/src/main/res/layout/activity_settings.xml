<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout style="@style/Settings_FrameLayoutStyle">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="@dimen/settings"
            android:layout_height="@dimen/settings"
            android:backgroundTint="@color/white"
            app:icon="@drawable/vector"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:id="@+id/back"/>

        <TextView
            style="@style/Settings_TextViewStyle"
            android:layout_height="@dimen/settings"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="@dimen/settings"
            android:text="@string/settings"
            android:textSize="22sp" />
    </FrameLayout>

    <FrameLayout style="@style/Settings_FrameLayoutStyle">

        <TextView

            style="@style/Settings_TextViewStyle"
            android:text="@string/dark_mode" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:checked="false"
            android:id="@+id/themeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="7dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/share"
        style="@style/Settings_FrameLayoutStyle">

        <TextView
            style="@style/Settings_TextViewStyle"
            android:text="@string/share" />

        <ImageView
            style="@style/Settings_ImageStyle"
            android:src="@drawable/share" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/support"
        style="@style/Settings_FrameLayoutStyle">

        <TextView
            style="@style/Settings_TextViewStyle"
            android:text="@string/support" />

        <ImageView
            style="@style/Settings_ImageStyle"
            android:src="@drawable/support" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/agreement"
        style="@style/Settings_FrameLayoutStyle">

        <TextView
            style="@style/Settings_TextViewStyle"
            android:text="@string/agreement" />

        <ImageView
            style="@style/Settings_ImageStyle"
            android:src="@drawable/arrow_forfard" />
    </FrameLayout>

</LinearLayout>
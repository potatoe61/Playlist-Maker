<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:src="@drawable/placeholder_104px"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:background="@null" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        style="@style/PlaylistsInfoTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        card_view:layout_constraintEnd_toEndOf="@id/cardView"
        card_view:layout_constraintStart_toStartOf="@id/cardView"
        card_view:layout_constraintTop_toBottomOf="@id/cardView"
        tools:text="Best songs 2025" />

    <TextView
        android:id="@+id/tvTracksCount"
        style="@style/PlaylistsInfoTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        card_view:layout_constraintEnd_toEndOf="@id/cardView"
        card_view:layout_constraintStart_toStartOf="@id/cardView"
        card_view:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="98 треков" />
</androidx.constraintlayout.widget.ConstraintLayout>